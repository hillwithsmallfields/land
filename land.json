        },
        "60:a4:4c:31:61:26": {
            "hostname": "isaiah",
            "host-class": "desktop",
            "no-partition-ops": true,
            "comment": "My main desktop.  Shouldn't need installing from this system, but this file is useful for defining repos to download."
        },
        "10:0b:a9:eb:99:48": {
            "comment": "The laptop covered in conference and project stickers.",
            "hostname": "elijah",
            "host-class": "personal-laptop"
        },
        "*second-laptop-macaddr*": {
            "comment": "The sticker-free laptop.",
            "hostname": "elisha",
            "host-class": "personal-laptop"
        },
        "*mycroft-host-macaddr*": {
            "hostname": "shteg",
            "host-class": "voice-assistant"
        },
        "b8:27:eb:f7:3a:b4": {
            "comment": "This is the old/current noticeboard computer, and will become the garage computer (Pi 2).",
            "hostname": "whortleberry",
            "host-class": "noticeboard"
        },
        "*garage-host-macaddr*": {
            "comment": "Whortleberry will move to this once replaced as the noticeboard computer (Pi 2).",
            "hostname": "whortleberry",
            "host-class": "charger-assistant"
        },
        "b8:27:eb:b1:85:7a": {
